{
  "manifest_version": 3,
  "name": "Gemini Summary",
  "version": "1.0",
  "description": "Summarize web pages using Gemini API in a side panel.",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Gemini Summary"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}